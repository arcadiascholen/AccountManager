<UserControl x:Class="AccountManager.Menu.Menu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AccountManager.Menu"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="200">
    
    <Grid Width="200" HorizontalAlignment="Left" Background="Black">
        <StackPanel>
            <ListView x:Name="ListViewMenu" Foreground="LimeGreen" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <!-- When adding new items, look at https://materialdesignicons.com/ for more icon names -->
                <local:MenuItem Title="Dashboard" Icon="ViewDashboard"/>
                <local:MenuItem Title="Groups" Icon="UserGroup"/>
                <local:MenuItem Title="Acounts" Icon="AccountCardDetails"/>
                <local:MenuItem Title="Passwords" Icon="PasswordReset"/>
                <local:MenuItem Title="Settings" Icon="Settings"/>
            </ListView>
        </StackPanel>
    </Grid>
</UserControl>
